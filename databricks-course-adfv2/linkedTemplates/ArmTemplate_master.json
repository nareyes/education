{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "databricks-course-adfv2"
		},
		"ls_formula1_databricks_accessToken": {
			"type": "secureString",
			"metadata": "Secure string for 'accessToken' of 'ls_formula1_databricks'"
		},
		"ls_formula1_lakehouse_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_formula1_lakehouse'"
		},
		"ls_formula1_databricks_properties_typeProperties_existingClusterId": {
			"type": "string",
			"defaultValue": "0615-130520-q9luod2y"
		},
		"ls_formula1_lakehouse_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dbcourselakehouse.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "databricks-course-adfv2_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_formula1_databricks_accessToken": {
						"value": "[parameters('ls_formula1_databricks_accessToken')]"
					},
					"ls_formula1_lakehouse_accountKey": {
						"value": "[parameters('ls_formula1_lakehouse_accountKey')]"
					},
					"ls_formula1_databricks_properties_typeProperties_existingClusterId": {
						"value": "[parameters('ls_formula1_databricks_properties_typeProperties_existingClusterId')]"
					},
					"ls_formula1_lakehouse_properties_typeProperties_url": {
						"value": "[parameters('ls_formula1_lakehouse_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}