{
	"name": "MDF_ProductRefined",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_SRC_Product",
						"type": "DatasetReference"
					},
					"name": "SourceProduct"
				},
				{
					"dataset": {
						"referenceName": "DS_SRC_ProductCategory",
						"type": "DatasetReference"
					},
					"name": "SourceProductCat"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_SRC_ProductRefined",
						"type": "DatasetReference"
					},
					"name": "SinkProductRefined"
				}
			],
			"transformations": [
				{
					"name": "JoinProduct"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ProductID as string,",
				"          Name as string,",
				"          ProductNumber as string,",
				"          Color as string,",
				"          StandardCost as string,",
				"          ListPrice as string,",
				"          Size as string,",
				"          Weight as string,",
				"          ProductCategoryID as string,",
				"          ProductModelID as string,",
				"          SellStartDate as string,",
				"          SellEndDate as string,",
				"          ModifiedDate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceProduct",
				"source(output(",
				"          ProductCategoryID as string,",
				"          ParentProductCategoryID as string,",
				"          Name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceProductCat",
				"SourceProduct, SourceProductCat join(SourceProduct@ProductCategoryID == SourceProductCat@ProductCategoryID,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> JoinProduct",
				"JoinProduct sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['MDFProductRefined.csv'],",
				"     truncate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          ProductID,",
				"          Name = SourceProduct@Name,",
				"          ProductNumber,",
				"          Color,",
				"          StandardCost,",
				"          ListPrice,",
				"          Size,",
				"          Weight,",
				"          ProductCategoryID = SourceProduct@ProductCategoryID,",
				"          ParentProductCategoryID,",
				"          ProductCategoryName = SourceProductCat@Name,",
				"          ProductModelID,",
				"          SellStartDate,",
				"          SellEndDate,",
				"          ModifiedDate",
				"     ),",
				"     partitionBy('hash', 1)) ~> SinkProductRefined"
			]
		}
	}
}