{
	"name": "pl_validation_demo",
	"properties": {
		"description": "Validation demo on minimum file size.",
		"activities": [
			{
				"name": "validateFileSize",
				"description": "",
				"type": "Validation",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "ds_blob_input_validation",
						"type": "DatasetReference"
					},
					"timeout": "0.12:00:00",
					"sleep": 10,
					"minimumSize": 10
				}
			},
			{
				"name": "ValidateSuccess",
				"type": "Wait",
				"dependsOn": [
					{
						"activity": "validateFileSize",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"waitTimeInSeconds": 15
				}
			},
			{
				"name": "validateFailure",
				"type": "Fail",
				"dependsOn": [
					{
						"activity": "validateFileSize",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"message": "No File in Directory",
					"errorCode": "400"
				}
			}
		],
		"folder": {
			"name": "Control Flow"
		},
		"annotations": []
	}
}