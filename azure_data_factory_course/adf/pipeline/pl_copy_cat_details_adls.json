{
	"name": "pl_copy_cat_details_adls",
	"properties": {
		"description": "Copy category details from blob to adls",
		"activities": [
			{
				"name": "copyCatDetails",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "input",
						"value": "blob/input/category_details.csv"
					},
					{
						"name": "output",
						"value": "adls/output/category-details/category_details.csv"
					}
				],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"additionalColumns": [
							{
								"name": "File_Name",
								"value": "$$FILEPATH"
							}
						],
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": true,
					"stagingSettings": {
						"linkedServiceName": {
							"referenceName": "ls_azblob",
							"type": "LinkedServiceReference"
						},
						"path": "staging"
					},
					"logSettings": {
						"enableCopyActivityLog": true,
						"copyActivityLogSettings": {
							"logLevel": "Info",
							"enableReliableLogging": true
						},
						"logLocationSettings": {
							"linkedServiceName": {
								"referenceName": "ls_azblob",
								"type": "LinkedServiceReference"
							},
							"path": "adf-logs"
						}
					},
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "Product_id",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Product_Id",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "Product_name",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Product_Name",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "Category",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Category",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "File_Name",
									"type": "String"
								},
								"sink": {
									"name": "File_Name",
									"type": "String",
									"physicalType": "String"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_blob_input_category_details",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_adls_output_category_details",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "Copy Activity"
		},
		"annotations": []
	}
}