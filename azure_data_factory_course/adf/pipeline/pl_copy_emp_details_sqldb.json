{
	"name": "pl_copy_emp_details_sqldb",
	"properties": {
		"description": "Copy emp details from az blob to sqldb.",
		"activities": [
			{
				"name": "copyEmpDetails",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "input",
						"value": "blob/input/emp_details.csv"
					},
					{
						"name": "output",
						"value": "sqldb/dbo.EmployeeDetails"
					}
				],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"additionalColumns": [
							{
								"name": "File_Name",
								"value": "$$FILEPATH"
							}
						],
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"disableMetricsCollection": false
					},
					"enableStaging": true,
					"stagingSettings": {
						"linkedServiceName": {
							"referenceName": "ls_azblob",
							"type": "LinkedServiceReference"
						},
						"path": "staging"
					},
					"logSettings": {
						"enableCopyActivityLog": true,
						"copyActivityLogSettings": {
							"logLevel": "Info",
							"enableReliableLogging": true
						},
						"logLocationSettings": {
							"linkedServiceName": {
								"referenceName": "ls_azblob",
								"type": "LinkedServiceReference"
							},
							"path": "adf-logs"
						}
					},
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "Emp_id",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Emp_Id",
									"type": "String",
									"physicalType": "varchar"
								}
							},
							{
								"source": {
									"name": "Name",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Name",
									"type": "String",
									"physicalType": "varchar"
								}
							},
							{
								"source": {
									"name": "Gender",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Gender",
									"type": "String",
									"physicalType": "varchar"
								}
							},
							{
								"source": {
									"name": "Salary",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Salary",
									"type": "String",
									"physicalType": "varchar"
								}
							},
							{
								"source": {
									"name": "File_Name",
									"type": "String"
								},
								"sink": {
									"name": "File_Name",
									"type": "String",
									"physicalType": "varchar"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_blob_input_emp_details",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_sqldb_emp_details",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}