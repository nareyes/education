{
	"name": "df_employee",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_blob_input_employee",
						"type": "DatasetReference"
					},
					"name": "blobEmployee"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_adls_output_folder",
						"type": "DatasetReference"
					},
					"name": "adlsEmployee"
				},
				{
					"dataset": {
						"referenceName": "ds_sqldb_output_employee_scd2",
						"type": "DatasetReference"
					},
					"name": "sqldbEmployeeSCD2",
					"description": "Export data to ds_sqldb_output_employee_scd2",
					"rejectedDataLinkedService": {
						"referenceName": "ls_azblob",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [],
			"scriptLines": [
				"source(output(",
				"          Emp_id as integer,",
				"          Name as string,",
				"          Gender as string,",
				"          Salary as integer,",
				"          Dept_id as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: true,",
				"     moveFiles: ['','processed/'],",
				"     partitionBy('hash', 1)) ~> blobEmployee",
				"blobEmployee sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['employee.csv'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          Emp_Id = Emp_id,",
				"          Name,",
				"          Gender,",
				"          Salary,",
				"          Dept_Id = Dept_id",
				"     ),",
				"     partitionBy('hash', 1)) ~> adlsEmployee",
				"blobEmployee sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Emp_Key as integer,",
				"          Emp_Id as integer,",
				"          Name as string,",
				"          Gender as string,",
				"          Salary as integer,",
				"          Dept_Id as integer,",
				"          Is_Active as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          Emp_Id = Emp_id,",
				"          Name,",
				"          Gender,",
				"          Salary,",
				"          Dept_Id = Dept_id",
				"     )) ~> sqldbEmployeeSCD2"
			]
		}
	}
}