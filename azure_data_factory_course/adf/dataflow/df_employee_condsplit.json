{
	"name": "df_employee_condsplit",
	"properties": {
		"description": "Conditional split transformation demo.",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_blob_input_employee",
						"type": "DatasetReference"
					},
					"name": "blobEmployee"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_sqldb_output_employee_it",
						"type": "DatasetReference"
					},
					"name": "sqldbEmployeeIT",
					"rejectedDataLinkedService": {
						"referenceName": "ls_azblob",
						"type": "LinkedServiceReference"
					}
				},
				{
					"dataset": {
						"referenceName": "ds_sqldb_output_employee_hr",
						"type": "DatasetReference"
					},
					"name": "sqldbEmployeeHR",
					"rejectedDataLinkedService": {
						"referenceName": "ls_azblob",
						"type": "LinkedServiceReference"
					}
				},
				{
					"dataset": {
						"referenceName": "ds_sqldb_output_employee_other",
						"type": "DatasetReference"
					},
					"name": "sqldbEmployeeOther",
					"rejectedDataLinkedService": {
						"referenceName": "ls_azblob",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "split1"
				},
				{
					"name": "selectColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Emp_id as integer,",
				"          Name as string,",
				"          Gender as string,",
				"          Salary as integer,",
				"          Dept_id as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: true,",
				"     partitionBy('hash', 1)) ~> blobEmployee",
				"selectColumns split(equals(Dept_Id, 1),",
				"     equals(Dept_Id, 2),",
				"     disjoint: false) ~> split1@(ITEmployees, HREmployees, Other)",
				"blobEmployee select(mapColumn(",
				"          Emp_Id = Emp_id,",
				"          Name,",
				"          Gender,",
				"          Salary,",
				"          Dept_Id = Dept_id",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectColumns",
				"split1@ITEmployees sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Emp_Key as integer,",
				"          Emp_Id as integer,",
				"          Name as string,",
				"          Gender as string,",
				"          Salary as integer,",
				"          Dept_Id as integer,",
				"          Updated as timestamp",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          Emp_Id,",
				"          Name,",
				"          Gender,",
				"          Salary,",
				"          Dept_Id",
				"     )) ~> sqldbEmployeeIT",
				"split1@HREmployees sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Emp_Key as integer,",
				"          Emp_Id as integer,",
				"          Name as string,",
				"          Gender as string,",
				"          Salary as integer,",
				"          Dept_Id as integer,",
				"          Updated as timestamp",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          Emp_Id,",
				"          Name,",
				"          Gender,",
				"          Salary,",
				"          Dept_Id",
				"     )) ~> sqldbEmployeeHR",
				"split1@Other sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Emp_Key as integer,",
				"          Emp_Id as integer,",
				"          Name as string,",
				"          Gender as string,",
				"          Salary as integer,",
				"          Dept_Id as integer,",
				"          Updated as timestamp",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          Emp_Id,",
				"          Name,",
				"          Gender,",
				"          Salary,",
				"          Dept_Id",
				"     )) ~> sqldbEmployeeOther"
			]
		}
	}
}