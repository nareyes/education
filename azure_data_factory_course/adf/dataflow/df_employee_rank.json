{
	"name": "df_employee_rank",
	"properties": {
		"description": "Rank transformation demo.",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_blob_input_employee",
						"type": "DatasetReference"
					},
					"name": "blobEmployee"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_sqldb_output_employee_df",
						"type": "DatasetReference"
					},
					"name": "sqldbEmployeeDF",
					"description": "Export data to ds_sqldb_output_employee_df",
					"rejectedDataLinkedService": {
						"referenceName": "ls_azblob",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "selectEmployee"
				},
				{
					"name": "sortEmployeeDeptSalary"
				},
				{
					"name": "rankSalary",
					"description": "Dense ranking rows on columns 'Salary'"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Emp_id as integer,",
				"          Name as string,",
				"          Gender as string,",
				"          Salary as integer,",
				"          Dept_id as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: true,",
				"     partitionBy('hash', 1)) ~> blobEmployee",
				"blobEmployee select(mapColumn(",
				"          Emp_Id = Emp_id,",
				"          Name,",
				"          Gender,",
				"          Salary,",
				"          Dept_Id = Dept_id",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectEmployee",
				"selectEmployee sort(desc(Salary, true)) ~> sortEmployeeDeptSalary",
				"sortEmployeeDeptSalary rank(desc(Salary, true),",
				"     output(Salary_Rank as long),",
				"     dense: true) ~> rankSalary",
				"rankSalary sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Emp_Key as integer,",
				"          Emp_Id as integer,",
				"          Name as string,",
				"          Gender as string,",
				"          Salary as integer,",
				"          Dept_Id as integer,",
				"          Updated as timestamp",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          Emp_Id,",
				"          Name,",
				"          Gender,",
				"          Salary = Salary_Rank,",
				"          Dept_Id",
				"     )) ~> sqldbEmployeeDF"
			]
		}
	}
}